<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RadioGroup
        android:id="@+id/sports_tab"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/type_show"
            android:layout_height="35dp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:button="@null"
            android:background="@drawable/button_setting"
            android:text="直播" />
        <RadioButton
            android:id="@+id/type_football"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:layout_width="0dp"
            android:button="@null"
            android:background="@drawable/button_setting"
            android:gravity="center"
            android:text="足球"
            android:checked="false" />

        <RadioButton
            android:id="@+id/type_basketball"
            android:layout_height="35dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:button="@null"
            android:background="@drawable/button_setting"
            android:text="篮球" />
        <RadioButton
            android:id="@+id/type_table"
            android:layout_height="35dp"
            android:gravity="center"
            android:layout_width="0dp"
            android:button="@null"
            android:background="@drawable/button_setting"
            android:layout_weight="1"
            android:text="台球" />
        <RadioButton
            android:id="@+id/type_other"
            android:checked="true"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:gravity="center"
            android:button="@null"
            android:layout_width="0dp"
            android:background="@drawable/button_setting"
            android:text="综合" />

    </RadioGroup>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/sportslist"
            >
        </ListView>
    </LinearLayout>
</LinearLayout>