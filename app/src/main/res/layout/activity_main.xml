<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3"
    tools:context="com.example.phn.youwenapp.MainActivity">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:id="@+id/searchtext"
            android:background="@drawable/et3" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="百度一下"
            android:background="@drawable/button_press"
            android:id="@+id/search" />
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/webreplace">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">



     <RadioGroup
         android:id="@+id/up_tab"
         android:orientation="horizontal"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">

         <RadioButton
             android:id="@+id/car"
             android:checked="true"
             android:layout_weight="1"
             android:layout_height="30dp"
             android:gravity="center"
             android:button="@null"
             android:layout_width="0dp"
             android:background="@drawable/button_setting"
             android:text="汽车" />
         <RadioButton
             android:id="@+id/news"
             android:layout_height="30dp"
             android:gravity="center"
             android:layout_width="0dp"
             android:layout_weight="1"
             android:button="@null"
             android:background="@drawable/button_setting"
             android:text="新闻" />
         <RadioButton
             android:id="@+id/movie"
             android:layout_height="30dp"
             android:gravity="center"
             android:layout_weight="1"
             android:layout_width="0dp"
             android:button="@null"
             android:background="@drawable/button_setting"
             android:text="影视" />
         <RadioButton
             android:id="@+id/sports"
             android:layout_height="30dp"
             android:gravity="center"
             android:layout_width="0dp"
             android:button="@null"
             android:background="@drawable/button_setting"
             android:layout_weight="1"
             android:text="体育" />
         <RadioButton
             android:id="@+id/lesson"
             android:layout_weight="1"
             android:layout_height="30dp"
             android:layout_width="0dp"
             android:button="@null"
             android:background="@drawable/button_setting"
             android:gravity="center"
             android:text="公开课"
             android:checked="false" />
     </RadioGroup>

        <android.support.v4.view.ViewPager
            android:id="@+id/up_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v4.view.ViewPager>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:id="@+id/webreplace2">
<FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
<HorizontalScrollView
    android:layout_width="match_parent"
    android:id="@+id/hv"
    android:scrollbars="none"
    android:layout_height="wrap_content">

        <RadioGroup
            android:id="@+id/down_tab"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/down_news"
                android:checked="true"
                android:layout_height="30dp"
                android:gravity="center"
                android:button="@null"
                android:layout_width="80dp"
                android:background="@drawable/button_setting"
                android:text="新闻" />
            <RadioButton
                android:id="@+id/sound"
                android:layout_height="30dp"
                android:gravity="center"
                android:button="@null"
                android:layout_width="80dp"
                android:background="@drawable/button_setting"
                android:text="地区名声" />
            <RadioButton
                android:id="@+id/market"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_width="80dp"
                android:button="@null"
                android:background="@drawable/button_setting"
                android:text="二手市场" />
            <RadioButton
                android:id="@+id/pet"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_width="80dp"
                android:button="@null"
                android:background="@drawable/button_setting"
                android:text="宠物" />
            <RadioButton
                android:id="@+id/store"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_width="80dp"
                android:button="@null"
                android:background="@drawable/button_setting"
                android:text="新店开张" />
            <RadioButton
                android:id="@+id/joke"
                android:layout_height="30dp"
                android:layout_width="80dp"
                android:button="@null"
                android:background="@drawable/button_setting"
                android:gravity="center"
                android:text="段子" />
            <RadioButton
                android:id="@+id/favour"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_width="80dp"
                android:button="@null"
                android:background="@drawable/button_setting"
                android:text="收藏订阅" />
            <RadioButton
                android:id="@+id/person"
                android:layout_height="30dp"
                android:layout_width="80dp"
                android:button="@null"
                android:background="@drawable/button_setting"
                android:gravity="center"
                android:text="个人信息" />

        </RadioGroup>
</HorizontalScrollView>
</FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/moveable">
        <android.support.v4.view.ViewPager
            android:id="@+id/down_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v4.view.ViewPager>
        </FrameLayout>
    </LinearLayout>
    </LinearLayout>
    </FrameLayout>
</LinearLayout>
